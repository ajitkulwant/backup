//////////////////////////////////////HOME Component .HTML


<br><br><br>
<button (click)="GoToRegister()" type="button" class="btn btn-primary">Add New Record</button>


<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>No</th><th>Name</th><th>Address</th>
      </tr>
    </thead>
    <tbody>
      <tr *ngFor="let emp of employees">
        <td>{{emp.no}}</td>
        <td>{{emp.name}}</td>
        <td>{{emp.address}}</td>
      </tr>
    </tbody>
  </table>
</div>


